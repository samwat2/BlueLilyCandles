<h1 class="wish">Cart</h1>
<div class="container">
	<div class="row">
		<div id="cart-items">
			<% @cart_items.each do |item| %>
			<div class="list-group">
				<div class="list-group-item list-group-item-action flex-column align-items-start">
          <div class="d-flex w-100 justify-content-between">
            <h4 class="mb-1"><%= item.name %> $<%= item.price %></h4>  
          </div>
          <p class="mb-1"><%= item.description %>
            <%= link_to "Remove Item", cart_item_path(item), method: :destroy, remote: true %>
          </p>
        </div>
			</div>
			<% end %>
		</div>
    <%= form_with url: charges_path do %>
      <article>
        <% if flash[:error].present? %>
          <div id="error_explanation">
            <p><%= flash[:error] %></p>
          </div>
        <% end %>
        <label class="amount">
          <div class="list-group-item"><span><h4><u>Amount:</u> $<%= @total %></h4></span></div>
        </label>
      </article>

      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-description="A month's subscription"
              data-amount="<%= @total*100 %>"
              data-locale="auto"></script>
    <% end %>
  </div>
</div>
